<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>parameterDisp1</param-name>
        <param-value>1</param-value>
    </context-param>
    <filter>
        <display-name>LogFilter</display-name>
        <filter-name>LogFilter</filter-name>
        <filter-class>sem5.lab.web.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ServletName</servlet-name>
        <servlet-class>sem5.lab.web.ServletName</servlet-class>
        <init-param>
            <param-name>parameterDisp1</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>sem5.lab.web.AddToCart </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExitServlet</servlet-name>
        <servlet-class>sem5.lab.web.protect.ExitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToBase</servlet-name>
        <servlet-class>sem5.lab.web.AddToBase</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletName</servlet-name>
        <url-pattern>/ServletName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/add-cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SeqServlet</servlet-name>
        <servlet-class>sem5.lab.web.protect.SeqServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeqServlet</servlet-name>
        <url-pattern>/SeqServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExitServlet</servlet-name>
        <url-pattern>/ExitServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToBase</servlet-name>
        <url-pattern>/AddToBase</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ProdPageList.jsp</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <url-pattern>/SeqServlet</url-pattern>
            <url-pattern>/PrAccount.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/auth/auth.jsp</form-login-page>
            <form-error-page>/auth/auth-error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <user-data-constraint>
        <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
</web-app>
